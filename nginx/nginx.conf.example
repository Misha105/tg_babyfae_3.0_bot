user www-data;
worker_processes auto;
pid /run/nginx.pid;
error_log /var/log/nginx/error.log;

include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 1024; # Увеличено с 768 для современной нагрузки
    multi_accept on;
}

http {
    ##
    # Basic Settings
    ##
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off; # Скрываем версию nginx (безопасность)

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings (Global Best Practices 2025)
    ##
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off; # Клиент выбирает из безопасного списка
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    ##
    # Logging Settings
    ##
    access_log /var/log/nginx/access.log;

    ##
    # Gzip Settings (Включено сжатие для API и фронтенда)
    ##
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    ##
    # GLOBAL ZONES & MAPS
    # (Объявляются ТОЛЬКО здесь, чтобы избежать ошибки "duplicate zone")
    ##

    # 1. Map для поддержки WebSocket (Next.js, Socket.io и т.д.)
    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

    # 2. Зоны лимитирования (Rate Limiting)
    # 10m = ~160,000 IP-адресов в памяти
    limit_req_zone $binary_remote_addr zone=mylimit:10m rate=10r/s;
    limit_conn_zone $binary_remote_addr zone=addr:10m;

    ##
    # Virtual Host Configs
    ##
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
