# ----------------------------------------------------------------------
# HTTP -> HTTPS REDIRECT
# ----------------------------------------------------------------------
# Map for WebSocket 'Connection' header handling (declared in this file so it's included inside http { } in nginx.conf)
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}
server {
    listen 80;
    server_name 185-189-13-235.nip.io;

    # Разрешаем ACME challenge для Certbot
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/letsencrypt;
    }

    # Всё остальное редиректим на HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Map for WebSocket 'Connection' header handling (declared in this file so it's included inside http { } in nginx.conf)
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

# ----------------------------------------------------------------------
# HTTPS CONFIGURATION
# ----------------------------------------------------------------------
server {
    listen 443 ssl;
    http2 on;
    
    server_name 185-189-13-235.nip.io;

    # Пути к сертификатам
    ssl_certificate /etc/letsencrypt/live/185-189-13-235.nip.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/185-189-13-235.nip.io/privkey.pem;
    
    # Настройки SSL
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    
    # Можно раскомментировать позже, если обновите сертификат на тот, где есть OCSP
    # ssl_stapling on;
    # ssl_stapling_verify on;
    
    resolver 1.1.1.1 8.8.8.8 valid=300s;
    resolver_timeout 5s;

    # Security Headers
    server_tokens off;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # CSP: Разрешаем Telegram
    add_header Content-Security-Policy "frame-ancestors 'self' https://web.telegram.org https://telegram.org https://*.telegram.org" always;
    
    # Лимит на загрузку
    client_max_body_size 50M;

    # Применяем лимиты (зоны из nginx.conf)
    limit_req zone=mylimit burst=20 nodelay;
    limit_conn addr 10;

    # ------------------------------------------------------------------
    # PROXY TO BACKEND / HEALTH / API
    # ------------------------------------------------------------------
    # Health check (exact match) -> proxy to backend (port 3000)
    location = /health {
        # If Docker Compose maps API to host:3000, use 127.0.0.1:3000. If you bind to another port or use Docker network, adjust accordingly.
        proxy_pass http://127.0.0.1:3000/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_hide_header X-Frame-Options;
        proxy_read_timeout 10s;
    }

    # API proxy: forward all /api/* requests to the backend service
    location ^~ /api/ {
        # If using Docker Compose with host port mapping, this commonly points to 127.0.0.1:3000.
        # If Nginx runs inside Docker network, use the service name and port, for example: http://bot:3000/api/
        proxy_pass http://127.0.0.1:3000/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_hide_header X-Frame-Options;
        proxy_read_timeout 120s;
        proxy_connect_timeout 30s;
        proxy_buffering off;
    }

    # ------------------------------------------------------------------
    # PROXY TO APPLICATION (Port 8080)
    # ------------------------------------------------------------------
    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        proxy_hide_header X-Frame-Options;
        
        proxy_read_timeout 120s;
        proxy_connect_timeout 30s;
        proxy_buffering off;
    }

    # ------------------------------------------------------------------
    # MONITORING (Dozzle)
    # ------------------------------------------------------------------
    location /monitor/ {
        proxy_pass http://127.0.0.1:9999/monitor/;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        proxy_hide_header X-Frame-Options;
    }

    # Защита скрытых файлов
    location ~ /\.(?!well-known).* {
        deny all;
        access_log off;
        log_not_found off;
    }
}
