# .env.example
# Telegram Bot Token (Get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# WebApp URL (Your VPS Domain)
WEBAPP_URL=https://your-domain.com

# Node Environment
NODE_ENV=production

# Port (Internal Docker Port)
PORT=3000

# API URL for Frontend (Leave empty for relative path /api)
VITE_API_URL=

# Scheduler / Polling toggle
ENABLE_BOT_POLLING=true

# Container timezone (for logs/cron)
TZ=Europe/Moscow
